{
  "hosting": {
    "public": "build",
    "ignore": [
      "**/.*"
    ],

    "redirects": [{
      "source": "/Writing/UbuTrump",
      "destination": "/features/ubu-trump",
      "type": 301
    }, {
      "source": "/Writing/UbuTrump/index.html",
      "destination": "/features/ubu-trump",
      "type": 301
    }],

    "cleanUrls": true,

    "trailingSlash": false,

    "headers": [{
      "source": "**",
      "headers": [{
        "key": "X-Frame-Options",
        "value": "DENY"
      },{
        "key": "X-XSS-Protection",
        "value": "1; mode=block"
      },{
        "key": "X-Content-Type-Options",
        "value": "nosniff"
      },{
        "key": "X-Powered-By",
        "value": "George Soros"
      }]
    }]
  }
}
